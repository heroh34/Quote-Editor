<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Edit Mode Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/editModeButton"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="64dp"
        android:layout_height="56dp"
        app:iconGravity="textStart"
        android:layout_marginEnd="4dp"
        app:iconPadding="0dp"
        app:iconSize="24dp"
        android:textAllCaps="false"
        app:icon="@drawable/edit_24px"
        app:cornerRadius="12dp" />

    <!-- Left -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/moveLeftButton"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="64dp"
        android:layout_height="56dp"
        android:layout_marginEnd="4dp"
        app:icon="@drawable/arrow_back_24px"
        app:iconSize="24dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:cornerRadius="32dp" />

    <!-- Top -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/moveTopButton"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="64dp"
        android:layout_height="56dp"
        android:layout_marginEnd="4dp"
        app:icon="@drawable/arrow_upward_24px"
        app:iconSize="24dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:cornerRadius="32dp" />

    <!-- Down -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/moveDownButton"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="64dp"
        android:layout_height="56dp"
        app:icon="@drawable/arrow_downward_24px"
        app:iconSize="24dp"
        android:layout_marginEnd="4dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:cornerRadius="32dp" />

    <!-- Right -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/moveRightButton"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="64dp"
        android:layout_height="56dp"
        app:icon="@drawable/arrow_forward_24px"
        app:iconSize="24dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:cornerRadius="32dp" />


</LinearLayout>