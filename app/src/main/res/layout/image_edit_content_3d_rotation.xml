<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 3D Rotation Sub-Option Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/rotation3dSubOptionsChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacing="8dp"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/zRotationChip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z-Rotation"
                app:chipCornerRadius="20dp"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/xRotationChip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X-Rotation"
                app:chipCornerRadius="20dp"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/yRotationChip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y-Rotation"
                app:chipCornerRadius="20dp"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/flipChip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flip"
                app:chipCornerRadius="20dp"
                app:checkedIconVisible="false" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Dynamic 3D Rotation Content Container -->
    <FrameLayout
        android:id="@+id/rotation3dContentContainer"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <!-- Content will be added dynamically -->

    </FrameLayout>

</LinearLayout>