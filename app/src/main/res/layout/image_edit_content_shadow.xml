<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Shadow Sub-Option Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="12dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/shadowSubOptionsChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacing="8dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/shadowOffChip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                app:chipCornerRadius="20dp"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/shadowAngleChip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angle"
                app:chipCornerRadius="20dp"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/shadowBlurChip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blur"
                app:chipCornerRadius="20dp"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/shadowColorChip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                app:chipCornerRadius="20dp"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/shadowOpacityChip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opacity"
                app:chipCornerRadius="20dp"
                app:checkedIconVisible="false" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Dynamic Shadow Content Container -->
    <FrameLayout
        android:id="@+id/shadowContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp">

        <!-- Content will be added dynamically -->

    </FrameLayout>

</LinearLayout>