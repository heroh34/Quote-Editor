<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Rotation Value Display -->
    <TextView
        android:id="@+id/xRotationValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0Â°"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- X-Rotation Slider -->
    <com.google.android.material.slider.Slider
        android:id="@+id/xRotationSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="-180"
        android:valueTo="180"
        android:value="0"
        android:stepSize="1"
        app:labelBehavior="gone"
        app:thumbColor="@color/md_theme_primary"
        app:trackColorActive="@color/md_theme_primary" />

    <!-- Reset Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/xRotationResetButton"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Reset"
        android:textAllCaps="false"
        app:icon="@drawable/refresh_24px" />

</LinearLayout>